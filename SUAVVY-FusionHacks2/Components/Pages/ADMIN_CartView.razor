@page "/ADMIN_CartView"
<SectionContent SectionName="page-buttons">
    <div id="searchBox" class="input-group header-search" style="display:none;">
        <span class="input-group-text text-warning"><i class="fa fa-search"></i></span>
        <input id="txtSearch" type="text" class="form-control" placeholder="Search" value="" />
        <span class="input-group-text" onclick="hideSearchBox()"><i class="fa fa-times"></i></span>
    </div>
    <span id="controlBox">
        <button class="btn text-warning" onclick="history.back()">
            <i class="fas fa-arrow-left"></i>
        </button>
        <button class="btn text-warning">
            <i class="fa fa-search"></i>
        </button>
    </span>
</SectionContent>
<section>
    <h2>Cart of user @Model.Order.UserID</h2>
    <div class="landscape-menulist">
        @foreach (var itm in Model.Items4Checkout)
        {
            <div class="menuitem">
                <img src="/ProductPhotos/@(itm.ID).jpg" />
                <h3>@itm.Recipe</h3>
                <h5>@itm.Description</h5>
                <h4>P@(itm.Price)</h4>
                <div class="menuitem-actions">
                    <a class="menuitem-add" href="/productitem?productid=@itm.ID">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</section>